@model IEnumerable<MusicRCM.Models.Song>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                
            </th>
            <th>
                Song
            </th>
            <th>
                Artist
            </th>
            <th>
                Album
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a  href="https://open.spotify.com/track/@item.SpotifyId"><img src="@item.ImageUrl"></a>
            </td>
            <td>
                <a href="https://open.spotify.com/track/@item.SpotifyId">
                    @Html.DisplayFor(modelItem => item.SongName)
                </a>
            </td>
            <td>
                <a href="https://open.spotify.com/artist/@item.ArtistId">
                    @Html.DisplayFor(modelItem => item.ArtistName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumName)
            </td> 
            <td>
                <a asp-action="Delete" asp-route-id="@item.SongId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
